<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_credit_update_rewards_tree" model="ir.ui.view">
        <field name="name">pos.credit.update.rewards.tree</field>
        <field name="model">pos.credit.update.rewards</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="company_id"/>
                <field name="currency_id"/>
                <field name="attendance_ids"/>
                <field name="state"/>
                <field name="id"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_credit_update_rewards_form" model="ir.ui.view">
        <field name="name">pos.credit.update.rewards.form</field>
        <field name="model">pos.credit.update.rewards</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Confirm" type="object" name="switch_to_confirm" attrs="{'invisible': [('state', '==', 'confirm')]}"/>
                    <button string="Cancel" type="object" name="switch_to_cancel" attrs="{'invisible': [('state', '==', 'cancel')]}"/>
                    <button string="Draft" type="object" name="switch_to_draft" attrs="{'invisible': [('state', '==', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,cancel"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id"  readonly="1"/>
                            <field name="reward_type"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="attendance_ids"  readonly="1"/>
                            <!--<field name="balance" readonly="1"/>-->
                            <field name="note"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_credit_update_rewards_search" model="ir.ui.view">
        <field name="name">pos.credit.update.rewards.search</field>
        <field name="model">pos.credit.update.rewards</field>
        <field name="arch" type="xml">
            <search>
                <field name="date"/>
                <filter string="This Year" name="year" domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]" help="POS ordered created during current year"/>
                <filter string="Today" name="today" domain="[('date', '&gt;=',  datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                <separator/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <group expand="1" string="Group By">
                    <filter string="Salesperson" name="User" context="{'group_by':'user_id'}"/>
                    <filter string="Customer" context="{'group_by':'partner_id'}"/>
                    <separator/>
                    <filter string="Month" context="{'group_by':'date:month'}"/>
                    <filter string="Week" context="{'group_by':'date:week'}"/>
                    <filter string="Day" context="{'group_by':'date:day'}"/>
                    <filter string="Hour" context="{'group_by':'date:hour'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_pos_credit_update_rewards" model="ir.actions.act_window">
        <field name="name">Reward Credit Updates</field>
        <field name="res_model">pos.credit.update.rewards</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_pos_credit_update_rewards_search"/>
        <field name="context">{}</field>
    </record>

    <record id="server_action_pos_credit_update_rewards" model="ir.actions.server">
        <field name="name">Confirm</field>
        <field name="model_id" ref="point_of_sale.menu_point_config_product"/>
        <field name="state">code</field>
        <field name="code">env['pos.credit.update.rewards'].do_confirm()</field>
    </record>

    <record id="option_pos_credit_update_rewards" model="ir.values">
        <field name="name">Confirm</field>
        <field name="key2">client_action_multi</field>
        <field name="model">pos.credit.update.rewards</field>
        <field name="value" eval="'ir.actions.server,%d'%server_action_pos_credit_update_rewards"/>
    </record>


    <menuitem id="menu_pos_credit_update_rewards" name="Reward Credit Updates" action="action_pos_credit_update_rewards" parent="point_of_sale.menu_point_config_product" groups="point_of_sale.group_pos_manager" sequence="100"/>


</odoo>
